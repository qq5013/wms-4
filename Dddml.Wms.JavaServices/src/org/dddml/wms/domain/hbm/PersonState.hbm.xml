<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain">
  
  <class name="org.dddml.wms.domain.AbstractPersonState$SimplePersonState" table="People">

	<composite-id name="personalName" class="org.dddml.wms.domain.PersonalName">
		<key-property name="firstName" column="PersonalNameFirstName" length="50"/>
		<key-property name="lastName" column="PersonalNameLastName" length="50"/>
	</composite-id>

	<version name="version" type="long" />

	<property name="birthDate" ></property>

	<component name="loves" class="org.dddml.wms.domain.PersonalName">
		<property name="firstName" column="lovesFirstName" length="50"/>
		<property name="lastName" column="lovesLastName" length="50"/>
	</component>

	<property name="createdBy" ></property>

	<property name="createdAt" ></property>

	<property name="updatedBy" ></property>

	<property name="updatedAt" ></property>

	<property name="active" ></property>

	<property name="deleted" ></property>


  </class>
  
</hibernate-mapping>

